@using Microsoft.AspNetCore.Http;
@model Usuario

<h1 class="text-center">Editar usuário</h1>

<div class="row justify-content-md-center">
    <form asp-action="editarUsuario" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="form-control" value="@Model.Nome" required />
        </div>
        <div class="form-group">
            <label asp-for="login">Login:</label>
            <input asp-for="login" class="form-control" value="@Model.login" required />
        </div>
        <div>
            <label asp-for="senha">Senha:</label>
            <input asp-for="senha" class="form-control" value="@Model.senha" required />
        </div>
        <br />
        <br />
        <br />
        @if (Context.Session.GetInt32("tipo") == 0)
        {
            <select name="tipo" id="userTipo">
                <option value="@Usuario.ADMIN">Administrador</option>
                <option value="@Usuario.PADRAO">Padrão</option>
            </select>
        }
        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;

        <input type="submit" value="Salvar" class="btn btn-primary" />
    </form>
</div>