@using Microsoft.AspNetCore.Http;
<div class="alert alert-danger d-flex align-items-center" role="alert">
    <div>
        <h1 class="text-center"><i class="fas fa-exclamation-triangle" style="color: red; font-size: 50px;"></i> &nbsp; ACESSO RESTRITO!</h1>
    </div>
</div>

<h2 class="text-center">É necessário nível de acesso de Administrador para executar está ação</h2>
@if (Context.Session.GetString("login") == null)
{
    <h5 class="text-center">
        <a class="text-center" href="/Home/Login">Ir para página de Login ?</a>
    </h5>
}
else
{
    <h5 class="text-center">
        <a class="text-center" href="/Home/Index">Clique para retornar a Home!</a>
    </h5>
}